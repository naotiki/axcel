
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
	provider        = "prisma-client-js"
}

model Group {
	id    Int @id @default(autoincrement())
	name    String
	contact    String
	createdAt    DateTime @default(now())
	updatedAt    DateTime @updatedAt
	project    Project[]
}
model Project {
	id    Int @id @default(autoincrement())
	alias    String @unique
	title    String
	description    String?
	group    Group @relation(fields: [groupId],references: [id])
	groupId    Int
	status    Status
	createdAt    DateTime @default(now())
	updatedAt    DateTime @updatedAt
}

enum Status {
	Ok
	Limited
	Suspended
}

