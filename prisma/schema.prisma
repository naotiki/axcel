
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
	provider        = "prisma-client-js"
}

model Movie {
	id    Int @id @default(autoincrement())
	title    String
	status    Status
	category    String
	check    Boolean?
	number    Int? @default(1)
	date    DateTime?
	dateTime    DateTime?
}

enum Status {
	Ok
	Limited
	Suspended
}

model Creator {
	id    Int @id @default(autoincrement())
	name    String
	country    String
	website    String
	language    Language[]
}
model Language {
	id    Int @id @default(autoincrement())
	name    String
	firstRelease    DateTime
	latestVersion    String
	latestRelease    DateTime
	website    String?
	creator    Creator @relation(fields: [creatorId],references: [id])
	creatorId    Int
	funny    Boolean
}
